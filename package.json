{
  "private": true,
  "name": "it2566-armadillo",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.1.2",
    "turbo": "latest"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "functions/*"
    ],
    "nohoist": [
      "**/firebase-admin",
      "**/firebase-admin/**",
      "**/firebase-functions",
      "**/firebase-functions/**",
      "**/@armadillo/",
      "**/@armadillo/**"
    ]
  }
}
